<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>10</LangVersion>

        <Title>Iotatech Weighing Wrappers</Title>
        <Authors>Seiko Santana</Authors>
        <Version>1.0.0</Version>
        <Description>Collection of weighing module abstractions for .NET commonly used in Iotatechnology projects.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>

        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="FluentModbus" Version="3.2.1"/>
    </ItemGroup>

</Project>
